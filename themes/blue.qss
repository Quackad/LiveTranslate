QWidget {
    background-color: #f0f8ff;
    color: #2b2b2b;
    font-family: "Segoe UI";
    font-size: 11pt;
}

QTextEdit, QComboBox {
    background-color: #e7f3ff;
    color: #1c1c1c;
    border: 1px solid #add8e6;
    border-radius: 4px;
}

QPushButton {
    background-color: #b8e0ff;
    color: #1c1c1c;
    border: none;
    padding: 5px;
    border-radius: 4px;
}

QPushButton:hover {
    background-color: #a2d3fa;
}

QCheckBox {
    color: #2b2b2b;
}

QLabel {
    color: #2b2b2b;
}
